@{
    ViewData["Title"] = "Privacy Policy";
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>Privacy Policy - Bracelatte Company</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f0f8ff; /* Light gray background */
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff; /* White background for content */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Subtle shadow for content box */
            border-radius: 8px; /* Rounded corners for the content box */
        }

        h1 {
            color: #333333; /* Dark Gray */
            text-align: center;
        }

        h2 {
            color: #555555; /* Medium Gray */
        }

        p {
            color: #666666; /* Light Gray */
        }
